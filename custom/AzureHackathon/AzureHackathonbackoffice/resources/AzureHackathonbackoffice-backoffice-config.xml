<config xmlns="http://www.hybris.com/cockpit/config"
	xmlns:na="http://www.hybris.com/cockpitng/config/notifications">

	<context merge-by="module" component="editorareaactions" type="Consignment">
		<y:actions xmlns:y="http://www.hybris.com/cockpit/config/hybris">
			<y:group qualifier="common">
				<y:label>actiongroup.common</y:label>				
				<y:action action-id="de.hybris.azurehackathon.backoffice.actions.confirmpickupaction" property="currentObject"/>				
			</y:group>
		</y:actions>
    </context>

	<!-- Notification Area-->
	<context component="notification-area">
	    <na:notification-area>	        
	        <na:notifications eventType="AzureHackathonbackoffice.confirmpickup.event" level="SUCCESS">
	            <na:message>hmc.action.confirmpickup.success</na:message>
	        </na:notifications>
	   </na:notification-area>
	</context>
	<context merge-by="type" parent="GenericItem" type="CMSItem" component="listview">
		<list-view:list-view>
			<list-view:column qualifier="uid" />
			<list-view:column qualifier="name" />
			<list-view:column qualifier="catalogVersion" />
		</list-view:list-view>
	</context>

	<context component="explorer-tree" merge-by="module">
		<n:explorer-tree xmlns:n="http://www.hybris.com/cockpitng/config/explorertree">
			<n:navigation-node id="azureHackthon">
				<n:type-node id="AzureHackthonSearchBoxComponent" code="azureHackthonSearchBoxComponent" />
			</n:navigation-node>
		</n:explorer-tree>
	</context>
	<context component="explorer-tree" merge-by="module">
		<n:explorer-tree xmlns:n="http://www.hybris.com/cockpitng/config/explorertree">
			<n:navigation-node id="azureHackthon">
				<n:type-node id="AzureHackthonFAQBotComponent" code="azureHackthonFAQBotComponent" />
			</n:navigation-node>
		</n:explorer-tree>
	</context>
</config>
